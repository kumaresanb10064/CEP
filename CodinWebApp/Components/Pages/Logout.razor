@page "/logout"
@using MudBlazor
@rendermode InteractiveServer

@using Blazored.LocalStorage
@inject ILocalStorageService localStorage

<h3>Logout</h3>

<p>You have been logged out successfully or your session has been expired.</p>

<MudButton Color="Color.Primary" Variant="Variant.Filled" @onclick="GoToLogin">
    Login
</MudButton>

@code {
    [Inject]
    private NavigationManager NavigationManager { get; set; }

    private async void GoToLogin()
    {
        await localStorage.RemoveItemAsync("CodinWebAppIsAuthenticated");
        await localStorage.RemoveItemAsync("CodinWebAppUserId");

        NavigationManager.NavigateTo("/");
    }
}